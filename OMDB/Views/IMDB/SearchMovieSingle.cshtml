@model IMDBResponse

@if (Model != null)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6" style="border:1px solid #ddd">
                <img src="@Model.Poster" alt="responsive webite" class="img-fluid">
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6" style="border:1px solid #ddd">
                <h2>@Model.Title</h2>
                <h3>@Model.Year</h3>
                <p>@Model.Plot</p>
                <p>@Model.Director</p>
                <p>@Model.Runtime</p>
            </div>
        </div>
    </div>
}
else
{
    <div>The list is empty.</div>
}
